.btn
	display inline-block
	line-height 1.5
	text-align center
	vertical-align middle
	font-size 100%
	white-space nowrap
	background-color buttonbackground
	border none
	font-weight bold
	cursor p ointer
	margin 0
	parring-top 0
	parring-bottom 0
	parring-right 1rem
	parring-left 1rem
	border-radius 3px	
	
.btn-warning
	background-color color-warning
	color white
	&:hover 
		background-color rgb(211,47,47)		
			

.btn-primary
	background-color button-primary--color
	color white