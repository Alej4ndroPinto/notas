body
	background body--color
	font-size 16px
		
h1,h2,h3,h4,h5,h6
	color title--color
	
header
	flexbox()
	justify-content space-around
	padding 15px
	height 150px
	background header--color
	color white
	shadow()
	h1
		margin 0
	a
		&:visited
			color white

.container
	position: relative;
	top: -80px;
	margin 0 15%
	width 70%
	background panel--color
	shadow()
	
	h2
		padding 15px 15%
		margin 0
		height 34px
		background tool-bar-color 
		shadow()
		
	table,
	form,
	.details
		margin 5% 11%
		width 78%
		
	table
		height: 1100px;
		tr
			height 94px
			border-bottom 1px solid #eee
			.btn
				padding 6px
				&:hover
					shadow()
	form		
		padding 5% 0
		input,
		textarea
			padding-bottom 26px
			width 100%
			border-width: 0 0 1px 0;
			&:focus,
			&:active
				border none
				outline 0
				
		.buttons-section
			flexbox()
			justify-content: flex-end;
		.btn
			padding 6px
			shadow()
			&:hover
				shadow()

	.details
		padding 5% 0
		
	.buttons-section
		display: flex
		justify-content: center
		margin 25px 11%
		border none
	
	.btn--default
		color button--primary-color		
		
@media screen and (max-width: 1070px)
	.container
		table
			margin 5% 7%
			width 86%

			.btn
				font-family 'icomoon'
				font-size 0
				border-radius 50%
				width 48px
				height 48px
				&:before
					font-size 1rem
			.btn--default
				&:before
					content "\e601"
					
			.btn-primary
				&:before
					content "\e602"
					
			.btn-warning
				&:before
					content "\e600"					



@media screen and (max-width: 830px)
	.container
		margin 0
		width 100%
		
@media screen and (max-width: 630px)
	.container
		table
			margin 5%
			width 90%			
	.description
		display none